<h1>You are welcome <%= @user.name %></h1>

<% if !@events.empty? %>
<h3>You created the following events</h3>
<ul>
<% @events.each do |event| %>
<li> <%= link_to event.title , event %></li>
 
<% end %>
</ul>
   <br>
<% else %>
<h3>You have not created any events</h3>
 
<% end %>

<% if !@invites.empty? %>

<% if !@upcoming_events.empty? %>
<ul>
<h3>You have been invited to the following events</h3>

<!-- upcoming events loop -->
<% @upcoming_events.each do |event| %> 
  <li><%= link_to event.title , event %> </li>
<% end %>
</ul>

<% end %>

<!-- previous events loop -->
<% if !@previous_events.empty? %>
<ul>
  <h3>You attended the following events:</h3>
  
  <!-- upcoming events loop -->
  <% @previous_events.each do |event| %> 
    <li><%= link_to event.title , event %> </li>
  <% end %>
</ul>

<% end %>

<% end %>

<h2>Create a new event: <%= link_to  "New event", events_new_url %></h2>
<%= link_to  "Sign Out", signout_path , method: :delete %></h2>